<% include partials/_header%>
<div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/update/<%= person._id%>" method="POST"> 
                            <div class="form-group">
                                <input type="text" name="name" placeholder="Insert a Name" class="form-control"  value="<%= person.name%>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="age" placeholder="Insert Age" class="form-control"  value="<%= person.age%>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="email" placeholder="Insert E-Mail" class="form-control"  value="<%= person.email%>">
                            </div>
                            <div class="form-group">
                                <input type="text" name="country" placeholder="Insert Country" class="form-control"  value="<%= person.country%>">
                            </div>
                            <button class="btn btn-primary btn-block">
                                Update
                            </button>
                        </form>
                    </div>
                </div>
            </div>     
        </div>
    </div>
</div>
<% include partials/_footer%>
    